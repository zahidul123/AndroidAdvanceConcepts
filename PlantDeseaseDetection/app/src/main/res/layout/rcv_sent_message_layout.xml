<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <TextView
        android:id="@+id/message_body"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/sent_message_container_background"
        app:layout_constraintEnd_toEndOf="parent"
        android:textSize="@dimen/text_heading_title_size"
        android:text="Can you help me"
        app:layout_constraintTop_toTopOf="parent"
        android:paddingLeft="5dp"
        android:paddingRight="5dp"
        app:layout_constraintWidth_percent=".7"
        />
    <TextView
        android:id="@+id/message_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="12.05 Pm"
        android:textSize="6dp"
        app:layout_constraintTop_toBottomOf="@id/message_body"
        app:layout_constraintEnd_toEndOf="parent"
        android:textColor="@color/gnt_gray"
        />

</androidx.constraintlayout.widget.ConstraintLayout>