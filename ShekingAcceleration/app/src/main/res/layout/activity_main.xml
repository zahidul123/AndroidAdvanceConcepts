<?xml version="1.0" encoding="utf-8"?>

<layout>


    <androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity">

        <com.skydoves.progressview.ProgressView
            android:id="@+id/progressView1"
            android:layout_width="40dp"
            android:layout_height="250dp"
            app:progressView_autoAnimate="true"
            app:progressView_colorBackground="@color/white"
            app:progressView_colorProgress="@color/purple_200"
            app:progressView_labelColorInner="@color/white"
            app:progressView_labelColorOuter="@color/black"
            app:progressView_borderColor="@color/red"
            app:progressView_borderWidth="2dp"
            app:progressView_labelSize="13sp"
            app:progressView_animation="accelerateDecelerate"
            app:progressView_labelSpace="10dp"
            app:progressView_labelTypeface="bold"
            app:progressView_max="100"
            app:progressView_min="15"
            app:progressView_orientation="vertical"
            app:progressView_padding="1dp"
            app:progressView_radius="8dp"
            android:layout_marginEnd="34dp"
            app:layout_constraintEnd_toEndOf="parent"
         app:layout_constraintBottom_toTopOf="@id/guideline_1"
            />

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/guideline_1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.4"
            />

        <TextView
            android:id="@+id/txtv_acceleratin_diff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="sdfg"
            android:textColor="@color/purple_500"
            android:layout_marginTop="50dp"
            android:layout_marginLeft="30dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/txtv_acceleratin_curr"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:textStyle="bold"
            android:text="sdfg"
            android:textColor="@color/yellow"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            app:layout_constraintTop_toBottomOf="@id/txtv_acceleratin_diff"
            app:layout_constraintStart_toStartOf="parent"
            />

        <TextView
            android:id="@+id/txtv_acceleratin_prev"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18dp"
            android:text="bjj"
            android:textStyle="bold"
            android:textColor="@color/black"
            android:layout_marginTop="10dp"
            android:layout_marginLeft="30dp"
            app:layout_constraintTop_toBottomOf="@id/txtv_acceleratin_curr"
            app:layout_constraintStart_toStartOf="parent"
            />
    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
